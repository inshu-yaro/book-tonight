typography()

html
  font-family: "brandon grotesque", HelveticaNeue, Helvetica, Arial, sans-serif
  color:#fff

html, body, div[ui-view]
  width 100%
  height 100%
  margin 0 auto

.hotels
  height 100%

#map-canvas
  height 60%
  width 60%

a
  color:#17599a

body
	background-image url(../img/bg.jpg)

.header
	width 100%
	height 51px
	background-color #fff
	position relative
	.logo
		color #222
		font-size 16px
		top 50%
		left 50%
		margin-right -50%
		margin 0
		position absolute
		transform translate(-50%, -50%)
	.menu_icon
		float right
		margin-right 14px
		margin-top 10px
		position relative
		a span
			transition background 0.3s ease
		span.one
			opacity 0.5
			width 13px
			height 2px
			background #222
			display block
			margin-top 8px
			margin-left 9px
		span.two
			opacity 1
			width 10px
			height 2px
			background #222
			display block
			margin-top 2px
			margin-left 9px
		span.three
			opacity 1
			width 15px
			height 2px
			background #222
			display block
			margin-top 2px
			margin-left 9px
		span.four
			opacity 1
			width 8px
			height 2px
			margin-top 2px
			height 2px
			background #222
			display block
			margin-left 9px

// Landing Page
.landing
	height 180px
	p.logo
		font-size 20px
		text-align center

.search
	width 80%
	padding 20px
	.search-icon
		float left
		margin-top 4px
		margin-right 8px
	.search-title
		border-bottom 1px solid #fff
		padding-bottom 5px
		margin-left 30px

// Reservation Page
.reserve p.btn
	margin-top 30px
a.btn
	background-color #3BB9FF
	color #fff
	width 60%
	height 30px
	padding 5px
	cursor pointer


.footer
	text-align center

.search-btn
	margin-top 30px
a.btn
	background-color #3BB9FF
