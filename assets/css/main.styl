typography()

html
  font-family: "brandon grotesque", HelveticaNeue, Helvetica, Arial, sans-serif
  color:#fff
  -webkit-font-smoothing: antialiased;

html, body, div[ui-view]
  width 100%
  height 100%
  margin 0 auto

.hotels
  height 100%

#map-canvas
  height 60%
  width 60%

a
  color:#17599a

body
	background-image url(../img/bg-2.jpg)

.header
	width 100%
	height 51px
	opacity 0.8
	background-color #fff
	position relative
	.logo
		color #222
		font-size 16px
		font-weight bold
		top 45%
		left 50%
		margin-right -50%
		margin 0
		position absolute
		transform translate(-50%, -50%)
	.menu_icon
		float right
		margin-right 14px
		margin-top 10px
		position relative
		a span
			transition background 0.3s ease
		span.one
			opacity 0.5
			width 13px
			height 2px
			background #222
			display block
			margin-top 8px
			margin-left 9px
		span.two
			opacity 1
			width 10px
			height 2px
			background #222
			display block
			margin-top 2px
			margin-left 9px
		span.three
			opacity 1
			width 15px
			height 2px
			background #222
			display block
			margin-top 2px
			margin-left 9px
		span.four
			opacity 1
			width 8px
			height 2px
			margin-top 2px
			height 2px
			background #222
			display block
			margin-left 9px

// Landing Page
.landing
	height 200px
	p.logo
		font-size 20px
		text-align center
	.tagline
		margin-top 0
		color #222
		text-align center
		font-size 10px
		top 65%
		left 50%
		margin-right -50%
		margin 0
		width 100%
		position absolute
		transform translate(-50%, -50%)

.search
	width 80%
	padding 20px
	.search-icon
		float left
		margin-top 4px
		margin-right 8px
	.search-title
		border-bottom 1px solid #fff
		padding-bottom 5px
		margin-left 30px

	.search-btn
		margin-top 30px
		text-align center
		a.btn
			border-radius 100px
			border 1px solid #eaeaea
			font-size 14px
			color #222
			transition all 0.3s ease
			display inline-block
			// background-color #4674DE
			// color #fff
			width 60%
			height 30px
			padding 12px 20px
			cursor pointer
			left 50%
			margin-right -50%
			margin-top 30px
			position absolute
			transform translate(-50%, -50%)

// Reservation Page
.reserve p.btn
	margin-top 30px
	a.btn
		background-color #3BB9FF
		color #fff
		width 60%
		height 30px
		padding 5px
		cursor pointer

.footer
	text-align center
